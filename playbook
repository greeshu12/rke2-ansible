---
- name: Cleanly Uninstall RKE2 from all nodes
  hosts: all
  become: yes

  tasks:

    - name: Stop rke2-server service if exists
      systemd:
        name: rke2-server
        state: stopped
      ignore_errors: yes

    - name: Stop rke2-agent service if exists
      systemd:
        name: rke2-agent
        state: stopped
      ignore_errors: yes

    - name: Run RKE2 uninstall script if present (server)
      command: /usr/local/bin/rke2-uninstall.sh
      ignore_errors: yes

    - name: Run RKE2 uninstall script if present (agent)
      command: /usr/local/bin/rke2-agent-uninstall.sh
      ignore_errors: yes

    - name: Remove RKE2 directories
      file:
        path: "{{ item }}"
        state: absent
      with_items:
        - /etc/rancher
        - /etc/rke2
        - /var/lib/rancher
        - /var/lib/rke2
        - /var/lib/kubelet
        - /var/lib/cni
        - /opt/cni
        - /run/k3s
        - /run/rke2

    - name: Remove leftover binaries
      file:
        path: "{{ item }}"
        state: absent
      with_items:
        - /usr/local/bin/rke2
        - /usr/local/bin/rke2-server
        - /usr/local/bin/rke2-agent
        - /usr/local/bin/kubectl
        - /usr/local/bin/crictl
        - /usr/local/bin/ctr
        - /usr/local/bin/rke2-killall.sh
        - /usr/local/bin/rke2-uninstall.sh
        - /usr/local/bin/rke2-agent-uninstall.sh

    - name: Flush iptables
      command: iptables -F
      ignore_errors: yes

    - name: Flush iptables NAT
      command: iptables -t nat -F
      ignore_errors: yes

    - name: Flush iptables mangle
      command: iptables -t mangle -F
      ignore_errors: yes

    - name: Delete iptables user chains
      command: iptables -X
      ignore_errors: yes
